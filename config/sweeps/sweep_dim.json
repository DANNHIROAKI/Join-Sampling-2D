{
    "base": {
      "dataset": {
        "source": "synthetic",
        "name": "rectgen_dim",
        "dim": 2,
        "synthetic": {
          "generator": "alacarte_rectgen",
          "n_r": 50000,
          "n_s": 50000,
          "alpha": 1.0,
          "seed": 1,
          "params": {}
        }
      },
  
      "run": {
        "method": "ours",
        "variant": "sampling",
        "t": 100000,
        "seed": 1,
        "repeats": 3,
        "j_star": 1000000,
        "enum_cap": 0,
        "write_samples": false,
        "verify": false,
        "extra": {
          "sirs_leaf_size": 32,
          "pbsm_k": 0,
          "tlsop_nx": 128,
          "tlsop_ny": 128
        }
      },
  
      "output": {
        "out_dir": "results/sweeps/dim",
        "run_tag": "dim_sweep"
      },
  
      "logging": {
        "level": "info",
        "with_timestamp": true,
        "with_thread_id": false
      },
  
      "sys": {
        "threads": 1
      }
    },
  
    "sweep": {
      "dim": [2],
      "method": ["ours"],
      "variant": ["sampling"],
      "t": [100000]
    },
  
    "files": {
      "raw": "sweep_raw.csv",
      "summary": "sweep_summary.csv"
    },
  
    "meta": {
      "note": "Dim sweep placeholder. Current build hard-codes Dim=2 in apps; extend the project to Dim>2 then add values to sweep.dim and adjust generators/baselines accordingly. Unknown sweep keys are ignored by current parser."
    }
  }
  
